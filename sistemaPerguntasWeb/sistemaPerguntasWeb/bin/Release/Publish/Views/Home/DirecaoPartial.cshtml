@{
    int ListagemDirecao = 1;
    string checado = ""; //string checado = (ListagemDirecao < ViewBag.AulasFeitas) ? "checked" : ""
}

        Aulas feitas: @ViewBag.AulasFeitas
        @using (Html.BeginForm("DirecaoPartial", "Home", FormMethod.Post, new { @id = "form-direcao" }))
        {
            for (int i = 1; i <= 5; i++)
            {
                <div class="row list-group-item list-group-item-action lista">
                    <div class="col">
                        <input type="checkbox" @(checado = (ListagemDirecao <= ViewBag.AulasFeitas) ? "checked" : "") name="aulas" value="@ListagemDirecao" />Aula @ListagemDirecao
                    </div>
                    <div class="col">
                        <input type="checkbox" @(checado = ((ListagemDirecao + 1) <= ViewBag.AulasFeitas) ? "checked" : "") name="aulas" value="@(ListagemDirecao + 1)" />Aula @(ListagemDirecao + 1)
                    </div>
                    <div class="col">
                        <input type="checkbox" @(checado = ((ListagemDirecao + 2) <= ViewBag.AulasFeitas) ? "checked" : "") name="aulas" value="@(ListagemDirecao + 2)" />Aula @(ListagemDirecao + 2)
                    </div>
                    <div class="col">
                        <input type="checkbox" @(checado = ((ListagemDirecao + 3) <= ViewBag.AulasFeitas) ? "checked" : "") name="aulas" value="@(ListagemDirecao + 3)" />Aula @(ListagemDirecao + 3)
                    </div>
                </div>
                ListagemDirecao += 4;
            }
            <hr />
            <button type="submit" class="btn btn-success" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Salvar">Salvar</button>
        }
