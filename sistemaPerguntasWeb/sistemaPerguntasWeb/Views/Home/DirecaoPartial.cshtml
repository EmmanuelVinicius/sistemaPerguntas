@{int ListagemDirecao = 0; }
<div class="row">
    <div class="col-md-12 col-md-12 well text-center aulas" id="content">
        <div class="list-group">
            <h1>Minhas aulas de Direção</h1>
            <div class="container">
                @for (int i = 0; i < 7; i++)
                {
                    <div class="row list-group-item list-group-item-action lista">
                        @for (int j = 0; j < 3; j++)
                        {
                            <div class="col">
                                <input type="checkbox" name="aulas-@ListagemDirecao" value="@ListagemDirecao" />Aula @ListagemDirecao
                            </div>
                            ListagemDirecao += 7;
                        }
                    </div>
                    ListagemDirecao = i + 1;
                }
            </div>
        </div>
    </div>
</div>
