@{int ListagemDirecao = 0; }

            <div class="container">
                @for (int i = 0; i < 7; i++)
                {
                    <div class="row list-group-item list-group-item-action lista">
                        @for (int j = 0; j < 3; j++)
                        {
                            <div class="col">
                                <input type="checkbox" name="aulas-@ListagemDirecao" value="@ListagemDirecao" />Aula @ListagemDirecao
                            </div>
                            ListagemDirecao += 7;
                        }
                    </div>
                    ListagemDirecao = i + 1;
                }
            </div>
        